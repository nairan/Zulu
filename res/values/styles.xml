<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
  
    
	<style name="CenterDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/CenterDialogTitle</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="CenterDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>   
    
    <style name="style_headerbar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/DarkRed</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.0dip</item>
    </style>
    
    <style name="style_epp_divider">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/DarkSalmon</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35.0dip</item>
    </style>
        
    <style name="style_headerbar_icon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:id">@id/id_headerbar_icon</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">35.0dip</item>
        <item name="android:layout_height">32.0dip</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginRight">4.0dip</item>
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="style_headerbar_imagebutton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:layout_marginRight">4.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>
 
    <style name="DialogText.expirebutton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>